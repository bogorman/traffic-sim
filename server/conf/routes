# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /map                        controllers.MapController.showAll

GET     /path                       controllers.MapController.shortestRoute(start: String, end: String)

GET     /api/*apiMethod             controllers.MapController.test(apiMethod: String)

GET     /socket                     controllers.Application.socket